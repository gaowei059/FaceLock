<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <com.guo.android_extend.widget.CameraGLSurfaceView
        android:id="@+id/glsurfaceView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <com.guo.android_extend.widget.CameraSurfaceView
        android:id="@+id/surfaceView01"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/textView1"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginEnd="38dp" />

    <ImageView
        android:id="@+id/imageView01"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView02"
        android:layout_below="@+id/textView02"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView01"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/surfaceView01"
        android:text="@string/app_name"
        android:textAlignment="center" />
</RelativeLayout>
